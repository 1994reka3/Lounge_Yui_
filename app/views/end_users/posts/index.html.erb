<div class="row">
  <!-- 検索系のサイドバー -->
  <div class="col-md-3">
    <!-- 検索系のサイドバー予定 -->
  </div>
  <!-- 投稿情報 -->
  <div class="col-md-6">
    <h2 class="text-center">新着投稿情報</h2>
    <% @posts.each do |post| %>
      <div class="row post-index">
        <div class="col-md-6">
          <%= link_to post_path(post) do %>
            <p class="post-title"><%= post.title %></p>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= post.genre.name %>
        </div>
        <div class="col-md-1">
          <p>14</p>
        </div>
        <div class="col-md-1">
          <p>2</p>
        </div>
        <div class="col-md-12 post-contents-area">
          <%= post.contents %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- 新規投稿、管理人からのお願い -->
  <div class="col-md-3">
    <%= link_to "記事投稿はこちら", new_post_path %>
    <p>ご利用上の注意</p>
  </div>
</div>