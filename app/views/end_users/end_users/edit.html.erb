<div class="row">
  <h2>ユーザー情報　編集</h2>
</div>
<!-- 新規ユーザー情報登録 -->
<%= form_for(@end_user) do |f| %>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">ユーザー名
      <span class="small">（20文字以内）</span>
    </label>
    <div class="col-md-5 m-2 p-2">
      <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">生年月日</label>
    <div class="col-md-5 m-2 p-2">
      <%= raw sprintf(f.date_select(:birthday, prompt: "--", use_month_numbers: true, start_year: 1930, end_year: Time.now.year, date_separator: "%s", class: "form-control"),"年　", "月　") + "日" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">郵便番号</label>
    <div class="col-md-5 m-2 p-2">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">メールアドレス</label>
    <div class="col-md-5 m-2 p-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">プロフィール画像</label>
    <div class="col-md-5 m-2 p-2">
      <%= attachment_image_tag @end_user, :image, size:"260x260", format: 'jpeg', fallback: "no_image.png" %>
      <%= f.label :image, "プロフィール画像をアップロード", class: "btn btn-outline-secondary rounded-pill" %>
      <%= f.attachment_field :image, style: "display: none;" %>
      
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="actions">
      <div class="col-md-2 m-2 p-2">
        <%= f.submit "変更する", class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
<% end %>



