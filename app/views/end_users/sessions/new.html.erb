<div class="row">
  <h2>ログイン</h2>
</div>
<!-- ログイン情報登録 -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row justify-content-center">
    <label class="col-md-2 col-form-label m-3 p-3">メールアドレス</label>
    <div class="col-md-5 m-3 p-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-2 col-form-label m-3 p-3">パスワード</label>
    <div class="col-md-5 m-3 p-3">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="actions">
      <div class="col-md-2 m-3 p-3">
        <%= f.submit "ログイン", class: "btn btn-info" %>
      </div>
    </div>
  </div>
<% end %>
<!-- 新規会員登録へのリンク -->
<div class="row justify-content-end">
  <div class="mt-3 pt-3">
    <%= link_to "会員登録がお済みでない方はこちら", new_end_user_registration_path %>
  </div>
</div>