<div class="row">
  <h2>新規ユーザー登録</h2>
</div>
<!-- 新規ユーザー情報登録 -->
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">ユーザー名
      <span class="small">（20文字以内）</span>
    </label>
    <div class="col-md-5 m-2 p-2">
      <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">生年月日</label>
    <div class="col-md-5 m-2 p-2">
      <%= raw sprintf(f.date_select(:birthday, prompt: "--", use_month_numbers: true, start_year: 1930, end_year: Time.now.year, date_separator: "%s", class: "form-control"),"年　", "月　") + "日" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">郵便番号</label>
    <div class="col-md-5 m-2 p-2">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">メールアドレス</label>
    <div class="col-md-5 m-2 p-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">パスワード
      <span class="small">（6〜20文字）</span>
    </label>
    <div class="col-md-5 m-2 p-2">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-3 col-form-label m-2 p-2">パスワード
      <span class="small">（確認用）</span>
    </label>
    <div class="col-md-5 m-2 p-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="actions">
      <div class="col-md-2 m-2 p-2">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>


