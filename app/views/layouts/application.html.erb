<!DOCTYPE html>
<html>
  <head>
    <title>LoungeYui</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <!-- ログイン・ログアウト関係 -->
      <div>
        <% if end_user_signed_in? %>
          <%= link_to "Lounge〜結〜", posts_path %>
          <%= link_to "マイページ", end_user_path %>
          <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
        <% elsif admin_signed_in? %>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        <% else %>
          <%= link_to "新規会員登録", new_end_user_registration_path %>
          <%= link_to "ログイン", new_end_user_session_path %>
        <% end %>
      </div>
      <!-- ナビゲーション -->
      <div>
        <%= link_to "このサイトについて", about_path %>
        <%= link_to "投稿閲覧コーナー", posts_path %>
        <%= link_to "健康講座コーナー", health_courses_path %>
      </div>
    </header>
    <main>
      <div class="container">
        <%= yield %>
      </div>
    </main>
    <footer>
    </footer>
  </body>
</html>
