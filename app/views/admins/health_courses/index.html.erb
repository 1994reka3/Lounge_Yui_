<div class="row">
  <!-- 検索　部分テンプレート -->
  <div class="col-md-3 search_box">
    <p>検索コーナー</p>
    <%= render partial: "end_users/health_courses/location_search" %>
  </div>
  <!-- 講座一覧 -->
  <div class="col-md-7">
    <h2 class="index-heading">講座情報一覧</h2>
    <div class="row">
      <table class="health-course-table">
        <thead>
          <tr>
            <th style="font-size: 20px;">開催日</th>
            <th style="font-size: 20px;">タイトル</th>
            <th style="font-size: 20px;">開催場所</th>
          </tr>
        </thead>
        <tbody>
          <% @health_courses.each do |health_course| %>
            <tr class="health-course-clickable" data-link="<%= admins_health_course_path(health_course) %>">
              <td><%= health_course.date.strftime("%Y年%m月%d日") %></td>
              <td><%= health_course.title %></td>
              <td><%= health_course.location %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row justify-content-center"><%= paginate @health_courses %></div>
  </div>
  <!-- 講座　新規登録リンク -->
  <div class="col-md-2">
    <div class="row new-post-link">
      <%= link_to new_admins_health_course_path, class: "btn btn-outline-primary btn-lg btn-block" do %>
        講座登録<i class="fas fa-pencil-alt"></i>
      <% end %>
    </div>
  </div>
</div>

