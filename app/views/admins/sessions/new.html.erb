<div class="row">
  <h1><strong>Lounge〜結〜</strong></h1>
  <h1>管理人室</h1>
</div>
<!-- ログイン情報登録 -->
<div class="row">
  <h2>ログイン</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row justify-content-center">
    <label class="col-md-2 col-form-label m-3 p-3">メールアドレス</label>
    <div class="col-md-5 m-3 p-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>
  <div class="form-group row justify-content-center">
    <label class="col-md-2 col-form-label m-3 p-3">パスワード</label>
    <div class="col-md-5 m-3 p-3">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="actions">
      <div class="col-md-2 m-3 p-3">
        <%= f.submit "ログイン", class: "btn btn-info" %>
      </div>
    </div>
  </div>
<% end %>
