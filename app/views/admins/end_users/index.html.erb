<div class="row justify-content-center">
  <div class="col-md-8">
    <h2 class="index-heading">ユーザー 一覧</h2>
    <div class="row">
      <table class="end_user-table">
        <thead>
          <tr>
            <th style="font-size: 20px;">ID</th>
            <th colspan="2" style="font-size: 20px;">ユーザー名</th>
          </tr>
        </thead>
        <tbody>
          <% @end_users.each do |end_user| %>
            <tr class="end_user-clickable" data-link="<%= admins_end_user_path(end_user) %>">
              <td><%= end_user.id %></td>
              <td><%= attachment_image_tag end_user, :image, size: "60x60", format: 'jpeg',fallback: "no_image.png" %></td>
              <td><%= end_user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-center"><%= paginate @end_users %></div>
    </div>
  </div>
</div>

