<div class="row">
  <!-- 検索　部分テンプレート -->
  <div class="col-md-3 search_box">
    <p>検索コーナー</p>
    <%= render partial: "end_users/posts/post_search", locals: {search: @search, departments: @departments, genres: @genres, tags: @tags} %>
  </div>
  <!-- 投稿一覧 -->
  <div class="col-md-9">
    <!-- 検索した際は検索ワードを表示 -->
    <% if params[:q].present? && params[:q][:title_or_contents_cont].present? %>
      <h2 class="index-heading">“ <%= params[:q][:title_or_contents_cont] %> ”の投稿一覧</h2>
    <% elsif @department %>
      <h2 class="index-heading">“ <%= @department.name %> ”の投稿一覧</h2>
    <% elsif @genre %>
      <h2 class="index-heading">“ <%= @genre.name %> ”の投稿一覧</h2>
    <% else %>
      <h2 class="index-heading">投稿一覧</h2>
    <% end %>
    <p class="text-center">タイトルクリックで詳細が見れます</p>
    <!-- 投稿一覧 -->
    <% @posts.each do |post| %>
      <div class="row post-index">
        <div class="pt-2 badge badge-pill badge-success">
          <p><%= post.genre.name %></p>
        </div>
        <div class="col-md-3 pt-2">
          <p>投稿ID:<%= post.id %></p>
        </div>
        <div class="col-md-4 pt-2">
          <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
        </div>
        <div class="col-md-2 pt-2">
          <i class="fas fa-heart" style="color: #EC407A;"></i>
          <%= post.likes.count %>
        </div>
        <div class="col-md-2 pt-2">
          <i class="fas fa-comment-alt" style="color: #007bff;"></i>
          <%= post.post_comments.count %>
        </div>
        <div class="col-md-12 pt-2">
          <%= link_to admins_post_path(post) do %>
            <p class="post-title"><%= post.title %></p>
          <% end %>
        </div>
        <div class="col-md-12 post-contents-area">
          <p><%= simple_format(post.contents) %></p>
        </div>
      </div>
    <% end %>
    <div class="row justify-content-center"><%= paginate @posts %></div>
  </div>
</div>
