<div class="row">
  <div class="col-md-2">
    投稿未確認件数　5件
    <!-- 投稿コメント未確認件数 -->
  </div>
  <!-- 投稿一覧 -->
  <div class="col-md-10">
    <h2 class="index-heading">投稿一覧</h2>
    <div class="row">
      <table class="post-table">
        <thead>
          <tr>
            <th>No.</th>
            <th>投稿日</th>
            <th>タイトル</th>
            <th>本文</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr class="post-clickable" data-link="<%= admins_post_path(post) %>">
              <td><%= post.id %></td>
              <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= post.title %></td>
              <td><%= post.contents %></td>
              <td><%= post.genre.name %></td>
              <td><i class="fas fa-heart" aria-hidden="true" style="color: #EC407A;"></i><%= post.likes.count %></td>
              <td><i class="fas fa-comment-alt" style="color: #007bff;"><%= post.post_comments.count %></i></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="row justify-content-center"><%= paginate @posts %></div>
  </div>
</div>
