<div class="row">
  <!-- 検索系のサイドバー -->
  <div class="col-md-3">
    <!-- 検索系のサイドバー予定 -->
  </div>
  <!-- 投稿詳細 -->
  <div class="col-md-6">
    <div class="row post-area">
      <!-- 確認チェックボックス -->
      <div class="col-md-1" style="padding: 0;">
        <%= link_to admins_post_posts_check_path(@post), method: :patch do %>
          <i class="far fa-check-square fa-2x"></i>
        <% end %>
      </div>
      <!-- 投稿詳細エリア -->
      <div class="col-md-11" style="padding: 0;">
        <div class="row">
          <div class="col-md-2 post-genre-tag">
            <p><%= @post.genre.name %></p>
          </div>
          <div class="col-md-4">
            <%= link_to end_user_path(@post.end_user) do %>
              <p class="end_user_name"><%= @post.end_user.name %><small> さん</small>
              </p>
            <% end %>
          </div>
          <div class="col-md-4">
            <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
          </div>
          <!-- いいね数 -->
          <div class="col-md-1" style="padding: 0;">
            <% if @post.liked_by?(@post.end_user) %>
              <i class="fas fa-heart" aria-hidden="true" style="color: #EC407A;"></i>
              <%= @post.likes.count %>
            <% else %>
              <i class="far fa-heart" aria-hidden="true"></i>
              <%= @post.likes.count %>
            <% end %>
          </div>
          <!-- コメント数 -->
          <div class="col-md-1" style="padding: 0;">
            <i class="fas fa-comment-alt" style="color: #007bff;"></i>  <%= @post.post_comments.count %>
          </div>
          <div class="row">
            <p class="post-title"><%= @post.title %></p>
          </div>
          <!-- 詳細メイン -->
          <div class="row post-body-main">
            <p><%= @post.contents %></p>
          </div>
          <div class="row post-body-sub">
            <p>診療科：<%= @post.department.name %></p>
          </div>
          <!-- 削除ボタン表示 -->
          <% if admin_signed_in? %>
            <div class="col-md-2 offset-10">
              <p><%= link_to "削除", admins_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger btn-sm" %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- コメントエリア -->
    <% @post.post_comments.each do |post_comment| %>
      <div class="row post-comment-area">
        <!-- 確認チェックボックス -->
        <div class="col-md-1" style="padding: 0;">
          <%= link_to admins_post_post_comment_comments_check_path(post_comment.post, post_comment), method: :patch do %>
            <i class="far fa-check-square fa-2x"></i>
          <% end %>
        </div>
        <!-- 投稿詳細エリア -->
        <div class="col-md-11" style="padding: 0;">
          <div class="row">
            <div class="col-md-2 pt-1">
              <p>ID: <%= post_comment.id %></p>
            </div>
            <div class="col-md-6 pt-1">
              <%= link_to end_user_path(post_comment.end_user) do %>
                <p class="post_comment_end_user_name">
                  <%= post_comment.end_user.name %><small> さん</small>
                </p>
              <% end %>
            </div>
            <div class="col-md-4 pt-1">
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            </div>
            <div class="col-md-12"><%= post_comment.comment %></div>
            <div class="col-md-2 offset-md-10">
              <%= link_to "削除",admins_post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-outline-danger btn-sm", "data-confirm" => "本当に削除しますか？" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 新規投稿、管理人からのお願い -->
  <div class="col-md-3">
    <%= link_to "記事投稿はこちら", new_post_path %>
    <p>ご利用上の注意</p>
  </div>
</div>
