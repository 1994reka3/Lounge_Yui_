<% if post.mark == false %>
  <%= link_to admins_post_posts_check_path(post), method: :patch, remote: true do %>
    <i class="far fa-check-square fa-3x" style="color: #7fd408"></i>
  <% end %>
<% else %>
  <%= link_to admins_post_posts_uncheck_path(post), method: :patch, remote: true do %>
    <i class="fas fa-check-square fa-3x" style="color: #7fd408;"></i>
  <% end %>
<% end %>